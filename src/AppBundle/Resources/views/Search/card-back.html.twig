
{% if card.double_sided %}
<div style="margin-bottom:2em">
	<div>
		<div class="panel panel-default border-{{ card.faction_code }} {% if card.faction2_code is defined %} border-dual {% endif %}">
			{% if card.back_name %}
			<div class="panel-heading border-{{ card.faction_code }} bg-{{ card.faction_code }} {% if card.faction2_code is defined %} bg-dual border-dual{% endif %}">
				<h3 class="panel-title">
					<div class="{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">{{card.back_name}} - {% trans %}Back{% endtrans %}</div>
				</h3>
  		</div>
  		{% else %}
  		<div class="panel-heading border-{{ card.faction_code }} bg-{{ card.faction_code }}">
				<h3 class="panel-title">
					<div class="{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">{{card.name}} - {% trans %}Back{% endtrans %}</div>
				</h3>
  		</div>
  		{% endif %}
			{% if card.back_flavor or card.back_text %}
  		<div class="panel-body card-content border-{{ card.faction_code }}">
  			<span class="card-type">{{ card.type_name }}</span>
  			{% if card.type_code == 'agenda' or card.type_code == 'act' %}
					{% if card.back_flavor %}
					<div class="card-flavor small{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">
					{{ card.back_flavor|raw|nl2br }}
					</div>
					{% endif %}
					{% if card.back_text %}
					<div class="card-text border-{{ card.faction_code }}{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">
					{{ card.back_text|raw }}
					</div>
					{% endif %}
				{% else %}
					{% if card.back_text %}
					<div class="card-text border-{{ card.faction_code }}{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">
					{{ card.back_text|raw }}
					</div>
					{% endif %}
					{% if card.back_flavor %}
					<div class="card-flavor small{% if card.spoiler is defined and not show_spoilers %} spoiler{% endif %}">
					{{ card.back_flavor|raw|nl2br }}
					</div>
					{% endif %}
				{% endif %}
  		</div>
  		{% endif %}
		</div>
	</div>
</div>
{% endif %}
