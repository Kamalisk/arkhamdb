{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="container">

<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
<div class="panel-heading">
  <h3 class="panel-title" id="title">Profile</h3>
</div>
<div class="panel-body" id="main">

<form role="form" action="{{ path('user_profile_save') }}" method="POST">

  <div class="form-group">
    <label>{% trans %}Reputation{% endtrans %}</label>
    <p>{{ user.reputation }}</p>
  </div>

  <h4>Account</h4>
  <div class="form-group">
    <label for="username">{% trans %}Username{% endtrans %}</label>
    <input type="text" name="username" id="username" value="{{ user.username }}" class="form-control">
  </div>

  <div class="form-group">
    <label for="email">{% trans %}Email{% endtrans %}</label>
    <input type="text" name="email" id="email" value="{{ user.email }}" class="form-control">
  </div>

  <div class="form-group">
    <label for="resume">{% trans %}Something about you{% endtrans %}</label>
    <textarea id="resume" name="resume" class="form-control">{{ user.resume }}</textarea>
  </div>

  <h4>Decks</h4>
  <div class="checkbox">
    <label>
        <input type="checkbox" name="taboo" value="1" {% if user.isTaboo %}checked{% endif %}>
        {% trans %}Default to the latest taboo{% endtrans %}
    </label>
    <p class="help-block">Checking this box will default new decks to the latest taboo rules. The taboo list can still be changed manually.</p>
  </div>
  <div class="checkbox">
    <label>
        <input type="checkbox" name="share_decks" value="1" {% if user.isShareDecks %}checked{% endif %}>
        {% trans %}Make your decks public{% endtrans %}
    </label>
    <p class="help-block">If you check this box, the "View" page of your decks will be public instead of private. You can then send the link to your friends. If you uncheck the box, all your decks become private immediately.</p>
  </div>

  <h4>Social</h4>
  <div class="checkbox">
    <label>
        <input type="checkbox" name="notif_author" value="1" {% if user.isNotifAuthor %}checked{% endif %}>
        {% trans %}Be notified when a user comments one of your decklists{% endtrans %}
    </label>
  </div>

  <div class="checkbox">
    <label>
        <input type="checkbox" name="notif_commenter" value="1" {% if user.isNotifCommenter %}checked{% endif %}>
        {% trans %}Be notified when a user also comments a decklist you commented{% endtrans %}
    </label>
  </div>

  <div class="checkbox">
    <label>
        <input type="checkbox" name="notif_mention" value="1" {% if user.isNotifMention %}checked{% endif %}>
        {% trans %}Be notified when a user mentions you in a comment{% endtrans %}
    </label>
  </div>

  <div class="form-group">
    <label for="color">{% trans %}Select a faction color for your username{% endtrans %}</label>
    <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; align-items: center;">
    {% for faction in factions %}
      <div >
        <label class="{{ faction.code }}">
          <input type="radio" name="user_faction_code" id="optionsRadios1" value="{{ faction.code }}" {% if user.color == faction.code %}checked{% endif %}>
          {{ faction.name }}
        </label>
      </div>
    {% endfor %}
    </div>
  </div>

  <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
</form>

</div>
</div>
</div>
</div>
</div> <!-- .container -->

{% endblock %}
